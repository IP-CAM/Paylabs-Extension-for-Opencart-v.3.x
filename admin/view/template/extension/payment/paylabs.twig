{{ header }}{{ column_left }} 
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <a onclick="$('#form').submit();" class="btn btn-primary"><i class="fa fa-save"></i></a>
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %} 
        <li><a href="{{ breadcrumb['href'] }}">{{ breadcrumb['text'] }}</a></li>
        {% endfor %} 
      </ul>
    </div>
  </div>
  <div class="container-fluid">
    {% if (error_warning) %} 
    <div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ error_warning }} 
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %} 
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}</h3>
      </div>
      <div class="panel-body">
        <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form" class="form-horizontal">

          <div class="form-group required">
            <label class="col-sm-2 control-label" for="input-key">{{ input_paylabs_mid }}</label>
            <div class="col-sm-10">
              <input type="text" name="payment_paylabs_mid" value="{{ payment_paylabs_mid }}" class="form-control" required />
            </div>
          </div>

          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-hash">{{ input_paylabs_pub_key }}</label>
            <div class="col-sm-10">
              <textarea name="payment_paylabs_pub_key" class="form-control" />{{ payment_paylabs_pub_key }}</textarea>
            </div>
          </div>
          
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-hash">{{ input_paylabs_priv_key }}</label>
            <div class="col-sm-10">
              <textarea name="payment_paylabs_priv_key" class="form-control" />{{ payment_paylabs_priv_key }}</textarea>
            </div>
          </div>
          
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-hash">{{ input_paylabs_pub_key_sandbox }}</label>
            <div class="col-sm-10">
              <textarea name="payment_paylabs_pub_key_sandbox" class="form-control" />{{ payment_paylabs_pub_key_sandbox }}</textarea>
            </div>
          </div>
          
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-hash">{{ input_paylabs_priv_key_sandbox }}</label>
            <div class="col-sm-10">
              <textarea name="payment_paylabs_priv_key_sandbox" class="form-control" />{{ payment_paylabs_priv_key_sandbox }}</textarea>
            </div>
          </div>
          
          <div class="form-group">
            <label class="col-sm-2 control-label">{{ input_paylabs_mode }}</label>
            <div class="col-sm-10">
              <select name="payment_paylabs_mode" class="form-control">
                {% if (payment_paylabs_mode) %} 
                <option value="1" selected="selected">{{ text_enabled }}</option>
                <option value="0">{{ text_disabled }}</option>
                {% else %} 
                <option value="1">{{ text_enabled }}</option>
                <option value="0" selected="selected">{{ text_disabled }}</option>
                {% endif %} 
              </select>
            </div>
          </div>

          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-server">{{ input_paylabs_order_status }}</label>
            <div class="col-sm-10">
              <select name="payment_paylabs_order_status_id" class="form-control">
                {% for order_status in order_statuses %} 
                {% if (order_status['order_status_id'] == payment_paylabs_order_status_id) %} 
                <option value="{{ order_status['order_status_id'] }}" selected="selected">{{ order_status['name'] }}</option>
                {% else %} 
                <option value="{{ order_status['order_status_id'] }}">{{ order_status['name'] }}</option>
                {% endif %} 
                {% endfor %} 
              </select>
            </div>
          </div>
          
          <div class="form-group">
            <label class="col-sm-2 control-label">{{ input_paylabs_status }}</label>
            <div class="col-sm-10">
              <select name="payment_paylabs_status" class="form-control">
                {% if (payment_paylabs_status) %} 
                <option value="1" selected="selected">{{ text_enabled }}</option>
                <option value="0">{{ text_disabled }}</option>
                {% else %} 
                <option value="1">{{ text_enabled }}</option>
                <option value="0" selected="selected">{{ text_disabled }}</option>
                {% endif %} 
              </select>
            </div>
          </div>
          
        </form>
      </div>
    </div>
  </div>
</div>
{{ footer }} 